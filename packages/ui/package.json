{
	"name": "@etnos/ui",
	"version": "0.0.0",
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./styles.css": "./dist/index.css"
	},
	"license": "MIT",
	"scripts": {
		"build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
		"build:components": "tsc",
		"build:assets": "cpx \"./src/assets/**/*\" ./dist/assets",
		"build": "npm run build:styles && npm run build:components && npm run build:assets",
		"check-types": "tsc --noEmit",
		"dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
		"dev:components": "tsc --watch",
		"lint": "eslint src --max-warnings 0"
	},
	"peerDependencies": {
		"react": "^19"
	},
	"devDependencies": {
		"@etnos/eslint-config": "*",
		"@etnos/tailwind-config": "*",
		"@etnos/tools": "*",
		"@etnos/typescript-config": "*",
		"@tailwindcss/cli": "^4.1.5",
		"@types/react": "^19.1.0",
		"cpx": "^1.5.0",
		"eslint": "^9.33.0",
		"tailwindcss": "^4.1.5",
		"typescript": "5.9.2"
	},
	"dependencies": {
		"antd": "^5.27.2",
		"react-icons": "^5.5.0"
	}
}
